<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Fraud Call Detection"
            app:titleTextColor="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <!-- Live Analysis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="space_between|center_vertical">

            <TextView
                android:id="@+id/tvLiveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— Live Analysis"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:drawableLeft="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="6dp"
                android:textColor="#444"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Threat Analysis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threat Analysis"
                android:textStyle="bold"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="6dp"
                android:textColor="#444"
                android:paddingBottom="6dp" />

            <LinearLayout
                android:id="@+id/threatCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/analysis_button_bg"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvThreatResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvThreatDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:paddingTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Live Transcription -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Transcription"
                android:textStyle="bold"
                android:drawableLeft="@android:drawable/ic_btn_speak_now"
                android:drawablePadding="6dp"
                android:textColor="#444"
                android:paddingBottom="6dp" />

            <!-- Scrollable Transcription Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/analysis_button_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/tvTranscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAnalysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Analysis"
            android:textColor="@android:color/white"
            android:enabled="false"
            android:backgroundTint="#B0BEC5" />

        <Button
            android:id="@+id/btnSaveLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Save Call Log"
            android:textColor="@android:color/white"
            android:backgroundTint="#607D8B" />
    </LinearLayout>

    <!-- Partnership Logos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:text="In partnership with"
            android:textColor="#444"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/qualcomm_logo" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/techm_logo" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
